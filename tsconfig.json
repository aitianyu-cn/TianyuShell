{
    "include": [
        "config",
        "dty",
        "i18n",
        "app",
        "**/*.view.json",
        "**/*.i18n.js"
    ],
    "compilerOptions": {
        "composite": true,
        "target": "es2021",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "dty-core/*": ["dty/*"],
            "dty-config/*": ["config/*"],
            "dty-lang/*": ["i18n/*"],
            "application/*": ["app/*"]
        }
    }
}
